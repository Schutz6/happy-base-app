        },{
            "path" : "pages/me/nickname",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "修改昵称",
                "enablePullDownRefresh": false
            }
        },{
            "path" : "pages/me/mobile",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "修改手机",
                "enablePullDownRefresh": false
            }
        },{
            "path" : "pages/me/email",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "修改邮箱",
                "enablePullDownRefresh": false
            }
        }
        
    ],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "",
		"navigationBarBackgroundColor": "#151A2F",
		"backgroundColor": "#151A2F"
	},
	"uniIdRouter": {},
	"tabBar": {
		"color": "#266CAC",
		"selectedColor": "#00E0FF",
		"backgroundColor": "#161C33",
		"borderStyle": "#294D6B",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/tabbar/icon-index.png",
				"selectedIconPath": "static/tabbar/icon-index-select.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/me/me",
				"iconPath": "static/tabbar/icon-me.png",
				"selectedIconPath": "static/tabbar/icon-me-select.png",
				"text": "我的"
			}
		]
	}
