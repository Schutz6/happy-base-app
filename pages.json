{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^module-(.*)": "@/modules/module-$1/module-$1.vue"
		}
	},
	"pages": [
		{
		    "path" : "pages/common/start/start",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "启动页",
		        "enablePullDownRefresh": false,
				"navigationStyle": "custom"
		    }
		},
		{
		    "path" : "pages/common/login/login",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "登录",
		        "enablePullDownRefresh": false,
				"navigationStyle": "custom"
		    }
		},
		{
		    "path" : "pages/common/register/register",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "注册",
		        "enablePullDownRefresh": false,
				"navigationStyle": "custom"
		    }
		},
		{
		    "path" : "pages/common/code/code",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "选择区号",
		        "enablePullDownRefresh": false
		    }
		},
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页",
				"enablePullDownRefresh": false,
				"navigationStyle": "custom"
			}
		},
        {
        	"path": "pages/me/me",
        	"style": {
        		"navigationBarTitleText": "我的",
        		"enablePullDownRefresh": false,
				"navigationStyle": "custom"
        	}
        }
